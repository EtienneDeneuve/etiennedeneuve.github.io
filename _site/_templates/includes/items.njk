{% set defaultURL = '' %}{% if item.data.links[0] %}{% for name, link in item.data.links[0] %}{% set defaultURL = link %}{% endfor %}{% else %}{% set defaultURL = item.url %}{% endif %}

  {% if r/external/g.test(item.data.tags) or r/course/g.test(item.data.tags) %}{% set external = true %}{% endif %}

  <div class="row justify-content px-3 px-sm-0 my-5 {% if loop.first %} mb-3 {% else %} my-md-huge {% endif %}">
    {% if item.data.thumb %}
      <div class="col-md-3">
        <a href="{{ defaultURL | url }}" class="d-block mb-1"  {% if external %}target="_blank"{% endif %}>
          <img class="item-title shadow-lg w-100 img-fluid rounded" src="{{ item.data.thumb }}" alt="{{ item.data.title }} image">
        </a>
      <time class="item-date small d-block text-body" datetime="{{ item.date | simpleDate | safe }}">{{ item.date | simpleDate | safe }}</time>
      </div>
    {% endif %}

    <div class="{% if item.data.thumb %} col-md-9 {% else %} col-md-12 {% endif %} ">
      <a href="{{ defaultURL | url }}" class="d-flex justify-content-between item-title h2 " {% if external %}target="_blank"{% endif %}>
      
      {{ item.data.title | safe }}
      {% if external %}
        <i class="fas fa-external-link-square-alt text-body ml-1" style="font-size: .5em;"></i>
      {% endif %}
      {% if item.data.updateDate %} 
        <i class="fas fa-sync"></i>
      {% endif %}
      </a>
      <div class="d-flex justify-content-between">
      <time class="item-date small text-body " datetime="{{ item.date | simpleDate | safe }}">Published on:    {{ item.date | simpleDate | safe }}</time>
      {% if item.data.updateDate %} 
      <time class="item-date small text-body " datetime="{{ item.data.updateDate | simpleDate | safe }}">Updated on:   {{ item.data.updateDate | simpleDate | safe }}</time>
      {% endif %}
      </div>
      <p class="item-summary lead mb-1 text-body">
      {{ item.data.summary | safe }}</p>
      {# <span class="meta__stats">About {{ item | dump | safe }} reading time</span> #}
      {% include "includes/links.njk" %}
      {% include "includes/tags.njk" %}
    </div>
  </div>