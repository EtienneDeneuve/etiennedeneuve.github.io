{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": ["blog"]
    }
  ],
  "frontMatter.custom.scripts": [
    {
      "id": "generate",
      "title": "Generate social image",
      "script": "./scripts/social-img.mjs",
      "contentTypes": ["blog"],
      "bulk": true,
      "output": "notification",
      "nodeBin": "node"
    },
    {
      "id": "test",
      "title": "Test",
      "script": "./scripts/test.mjs",
      "command": "node"
    },
    {
      "id": "validate-content",
      "title": "Validate blog content",
      "script": "./scripts/validate-content.mjs",
      "command": "node",
      "contentTypes": ["blog"],
      "bulk": true,
      "output": "notification"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "previewPath": "'blog'",
      "pageBundle": false,
      "clearEmpty": false,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "required": true
        },
        {
          "name": "lastModified",
          "type": "datetime",
          "default": "{{now}}"
        },
        {
          "name": "minutesRead",
          "type": "string",
          "single": true
        },
        {
          "name": "tags",
          "type": "tags"
        },
        {
          "name": "img",
          "type": "string",
          "single": true
        },
        {
          "name": "img_alt",
          "type": "string",
          "single": true
        },
        {
          "title": "updateDate",
          "name": "updateDate",
          "type": "datetime"
        },
        {
          "title": "preview",
          "name": "preview",
          "type": "string",
          "isPreviewImage": true
        }
      ]
    }
  ]
}
