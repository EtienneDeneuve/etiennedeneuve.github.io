{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-media-kit": "node src/scripts/generate-media-kit.mjs",
    "check-resources": "node src/scripts/check-resource-review.mjs",
    "verify-git-dates": "node src/scripts/verify-git-dates.mjs",
    "verify-seo": "node src/scripts/verify-seo.mjs",
    "spellcheck": "cspell \"**/*.{md,astro,ts,js,mjs,json}\" --no-progress",
    "spellcheck:report": "node src/scripts/spellcheck-report.mjs",
    "spellcheck:fix": "cspell \"**/*.{md,astro,ts,js,mjs,json}\" --no-progress --no-must-find-files",
    "linkcheck": "node src/scripts/check-links.mjs",
    "linkcheck:markdown": "find src -name '*.md' -type f | xargs -I {} markdown-link-check {} --config .markdown-link-check.json",
    "lighthouse": "lhci autorun --config=lighthouserc.js",
    "fetch-social-stats": "node src/scripts/fetch-social-stats.mjs",
    "sync-linkedin": "node src/scripts/sync-linkedin-profile.mjs",
    "harmonize-profile": "node src/scripts/harmonize-profile.mjs",
    "audit-pages": "node src/scripts/audit-pages.mjs",
    "ci:quality": "pnpm run spellcheck && pnpm run linkcheck && pnpm run verify-seo && pnpm run verify-git-dates && pnpm run check-resources",
    "ci:build": "pnpm run generate-media-kit && pnpm run fetch-social-stats && pnpm run build"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.2",
    "@jop-software/astro-cookieconsent": "^3.0.0",
    "@thewebforge/astro-og-images": "^3.0.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "aos": "^2.3.4",
    "astro": "^4.15.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-mermaidjs": "^6.0.0",
    "sharp": "^0.33.5",
    "vanilla-cookieconsent": "^3.0.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^5.2.0",
    "@astrojs/partytown": "^2.1.2",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.2.0",
    "@cspell/dict-aws": "^4.0.17",
    "@cspell/dict-docker": "^1.1.17",
    "@cspell/dict-fr-fr": "^2.3.2",
    "@cspell/dict-k8s": "^1.0.12",
    "@cspell/dict-terraform": "^1.1.3",
    "@frontmatter/extensibility": "^0.0.14",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@resvg/resvg-js": "^2.6.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/parser": "^6.21.0",
    "cspell": "^9.4.0",
    "date-fns": "^3.6.0",
    "dayjs": "^1.11.13",
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "gray-matter": "^4.0.3",
    "html-encoder-decoder": "^1.3.10",
    "html-entities": "^2.5.2",
    "markdown-link-check": "^3.14.2",
    "mdast-util-to-string": "^4.0.0",
    "playwright-core": "^1.57.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.13.0",
    "reading-time": "^1.5.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
