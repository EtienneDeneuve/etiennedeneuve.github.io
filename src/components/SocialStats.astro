---
import socialStats from "../data/social-stats.json";
import { siteConfig } from "../config/site.ts";
import Icon from "./Icon.astro";

// Format numbers with locale
const formatNumber = (num: number) => {
  return new Intl.NumberFormat("fr-FR").format(num);
};
---

<div class="social-stats">
  <h3>Statistiques</h3>
  <div class="stats-grid">
    {socialStats.github.followers > 0 && (
      <a href={siteConfig.social.github} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="github-logo" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.github.followers)}</span>
          <span class="stat-label">Followers GitHub</span>
        </div>
      </a>
    )}
    
    {socialStats.github.publicRepos > 0 && (
      <a href={siteConfig.social.github} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="code" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.github.publicRepos)}</span>
          <span class="stat-label">Repos publics</span>
        </div>
      </a>
    )}
    
    {socialStats.youtube.subscribers > 0 && (
      <a href={siteConfig.social.youtube} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="youtube-logo" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.youtube.subscribers)}</span>
          <span class="stat-label">Abonnés YouTube</span>
        </div>
      </a>
    )}
    
    {socialStats.youtube.videoCount > 0 && (
      <a href={siteConfig.social.youtube} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="microphone-stage" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.youtube.videoCount)}</span>
          <span class="stat-label">Vidéos</span>
        </div>
      </a>
    )}
    
    {socialStats.omnivya.websiteAccessible && (
      <a href={`https://${siteConfig.business.website}`} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="rocket-launch" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">✅</span>
          <span class="stat-label">{siteConfig.business.name}</span>
        </div>
      </a>
    )}
    
    {socialStats.simplifiEd.publicRepos > 0 && (
      <a href={`https://github.com/simplifi-ed`} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="github-logo" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.simplifiEd.publicRepos)}</span>
          <span class="stat-label">Repos Simplifi'ed</span>
        </div>
      </a>
    )}
    
    {socialStats.simplifiEd.totalStars > 0 && (
      <a href={`https://github.com/simplifi-ed`} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="trophy" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.simplifiEd.totalStars)}</span>
          <span class="stat-label">⭐ Simplifi'ed</span>
        </div>
      </a>
    )}
    
    {socialStats.linkedin.followers > 0 && (
      <a href={siteConfig.social.linkedin} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="linkedin-logo" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.linkedin.followers)}</span>
          <span class="stat-label">Followers LinkedIn</span>
        </div>
      </a>
    )}
    
    {socialStats.linkedin.connections > 0 && (
      <a href={siteConfig.social.linkedin} target="_blank" rel="noopener" class="stat-card">
        <Icon icon="linkedin-logo" size="1.5em" />
        <div class="stat-content">
          <span class="stat-value">{formatNumber(socialStats.linkedin.connections)}+</span>
          <span class="stat-label">Connexions</span>
        </div>
      </a>
    )}
  </div>
  
  <p class="stats-note">
    Dernière mise à jour: {new Date(socialStats.lastFetched).toLocaleDateString("fr-FR")}
  </p>
</div>

<style>
  .social-stats {
    padding: 2rem;
    background: var(--gray-999_20);
    border-radius: 1rem;
    border: 1px solid var(--gray-800);
  }

  .social-stats h3 {
    margin: 0 0 1.5rem 0;
    font-size: var(--text-xl);
    text-align: center;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem;
    background: var(--gray-999_40);
    border: 1px solid var(--gray-800);
    border-radius: 0.5rem;
    text-decoration: none;
    color: inherit;
    transition: transform var(--theme-transition), box-shadow var(--theme-transition);
  }

  .stat-card:hover,
  .stat-card:focus {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    text-decoration: none;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-value {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--accent-dark);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--gray-400);
    text-align: center;
  }

  .stats-note {
    margin: 1rem 0 0 0;
    font-size: var(--text-xs);
    color: var(--gray-500);
    text-align: center;
  }

  @media (min-width: 50em) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
