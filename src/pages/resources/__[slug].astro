---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const { slug } = Astro.params;
const resources = await getCollection("resources");
const resource = resources.find((res) => res.slug === slug);

if (!resource) {
    throw new Error(`Ressource avec le slug "${slug}" introuvable`);
}

const { Content, data } = await resource.render();
const pubDate = data.pubDate
    ? new Date(data.pubDate).toLocaleDateString("fr-FR", {
          day: "2-digit",
          month: "long",
          year: "numeric",
      })
    : null;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site ?? "https://etienne.deneuve.xyz").toString();

const jsonLd = {
    "@context": "https://schema.org",
    "@type": "CreativeWork",
    name: data.title,
    description: data.description,
    url: canonicalUrl,
    datePublished: data.pubDate?.toISOString?.(),
    about: data.category,
    inLanguage: "fr",
    mainEntityOfPage: {
        "@type": "WebPage",
        "@id": canonicalUrl,
    },
    image: data.img
        ? new URL(data.img, "https://etienne.deneuve.xyz").toString()
        : undefined,
    author: {
        "@type": "Person",
        name: "Etienne Deneuve",
        url: "https://etienne.deneuve.xyz",
    },
    sameAs: data.url ? [data.url] : undefined,
};
---

<BaseLayout>
    <article class="resource">
        <header>
            <h1>{data.title}</h1>
            {pubDate && <p class="pubDate">Publié le : {pubDate}</p>}
            <p class="category">Catégorie : {data.category}</p>
        </header>

        <section class="content">
            <Content />
        </section>

        {
            data.url && (
                <footer>
                    <a
                        href={data.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="external-link"
                    >
                        Accéder à la ressource
                    </a>
                </footer>
            )
        }
    </article>

    <script is:inline type="application/ld+json">
        {JSON.stringify(jsonLd)}
    </script>

    <style>
        .resource {
            max-width: 800px;
            margin: auto;
            padding: 2rem;
        }

        h1 {
            font-size: var(--text-4xl);
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .pubDate,
        .category {
            font-size: var(--text-md);
            color: var(--gray-600);
            margin-bottom: 1rem;
        }

        .content {
            margin-top: 2rem;
            line-height: 1.75;
        }

        .external-link {
            display: inline-block;
            margin-top: 2rem;
            padding: 0.75rem 1.5rem;
            background-color: var(--primary);
            color: white;
            border-radius: 0.5rem;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .external-link:hover {
            background-color: var(--primary-dark);
        }
    </style>
</BaseLayout>
